extends ../layout

block styles
  link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
  link(rel="stylesheet" href="/static/css/styles.angelarium.css")

block content
  section.section
    .contenedor
      form.formulario#formulario(action="" method="post")
        h3 ¿Quién es tu ángel protector?
        p Ingresa tu fecha de nacimiento y descubre quién es tu ángel y tu arcángel guardián...
        .inputs-container
          .sel.sel--day
            select#day(name="day")
          .sel.sel--month
            select#month(name="month")
          .sel.sel--year
            select#year(name="year")
          button.boton(type="submit") DESCUBRIR

block append scripts
  script(src="https://code.jquery.com/jquery-3.4.0.min.js" integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous")
  script(src="/static/js/index.angelarium.js")
  script(src="/static/js/custom-select.js")